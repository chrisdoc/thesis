InputStream is = new FileInputStream("a1.data");\line
// create new data input stream\line
DataInputStream dis = new DataInputStream(is);\line
while (dis.available() != 0)\{\line
    byte[] anon_id = new byte[32];\line
    dis.read(anon_id);\line
    timestamp=dis.readInt();\line
    timestamp_ms=dis.readInt();\line
    lac=dis.readInt();\line
    cell_id=dist.readInt();\line
    latitude=dis.readDouble();\line
    longitude=dis.readDouble();\line
    radius= dis.readLong();\line
    dis.skipBytes(12); //skip reserved fields\line
    event_type = dis.readShort();\line
    dis.skipBytes(3); //skip reserved fields\line
    angle_x=dis.readInt();\line
    angle_y=dis.readInt();\line
    speed=dis.readInt();\line
    //only print useful fields\line
    System.out.println(Hex.encodeHexString(anon_id) +";"+ timestamp +";"+lac +";"+cell_id +";"+latitude +";"+longitude +";"+event_type +";"+angle_x);\line
\}\par}
